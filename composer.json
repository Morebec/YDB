{
    "name": "morebec/ydb",
    "description": "YDB is a simple PHP utility library to use Yaml as a flat file database",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "jwillp",
            "email": "jwilliam.perreault@morebec.com"
        }
    ],
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.3"
        }
    },
    "require": {
        "php": "^7.3",
        "ext-json": "*",
        "morebec/collections": "^0.2.0",
        "react/socket": "^1.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.11.19",
        "phpstan/phpstan-beberlei-assert": "^0.11.2",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "Morebec\\YDB\\": "src/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --bootstrap vendor/autoload.php tests",
        "cs-lint": "php-cs-fixer fix src/ --diff -vvv --dry-run",
        "cs-fix": "php-cs-fixer fix src/ -vvv || true",
        "check-outdated": "composer outdated -m"
    }
}
